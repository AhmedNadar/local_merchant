
<h1>Your Order</h1>

<table>
  <tr>
    <th>Buyer:</th>
    <td><%= @order.buyer_id %></td>
  </tr>
  <tr>
    <th>Status:</th>
    <td><%= @order.status %></td>
  </tr>
  <tr>
    <th>Items:</th>
    <td><%= @order.order_items.count %></td>
  </tr>
  <tr>
    <th>Items</th>
    <th>Title</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Subtotal</th>
    <th>Stock</th>
    <th>Delete</th>
    <th>Order Total</th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= image_tag item.product.image_url(:thumb).to_s %></td>
      <td><%= item.product.title %></td>
      <!-- <td><%= item.quantity %></td> -->
      <td><%= link_to item.quantity, edit_order_item_path(item) %></td>
      <td><%= print_price item.product.price %></td>
      <td><%= print_price item.subtotal %></td>
      <td><%= display_stock(item.product.stock, item.quantity) %></td>
      <td><%= link_to "Delete", item, data: {confirm: "Are you sure?"}, mehtod: :delete  %></td>
    </tr>
    <tr>
      <td><%= print_price @order.total %>  </td>
    </tr>
  <% end %>
</table>

<p> <%= link_to "Empty Cart", @order, data: { confirm: 'Are you sure?' }, method: :delete %></p>

<p> <%= link_to "Continue Shopping", store_path %> </p>




