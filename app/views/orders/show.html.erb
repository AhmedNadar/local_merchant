
  <h1>Your Order</h1>

  <%= form_for @order do |f| %>
   <table>
      <tr>
        <th>Customer</th>
        <td><%= @order.user.name if @order.user %></td>
      </tr>
      <tr>
        <th>Status:</th>
        <% if @order.status == nil %>
        <td>Not submitted</td>
        <% else %>
        <td><%= @order.status %></td>
        <% end %>
      </tr>
      <tr>
        <th>Items:</th>
        <td><%= @order.order_items.count %></td>
      </tr>
      <tr>
        <th>Order Total:</th>
        <td><%= print_price @order.total %></td>
      </tr>
      <tr>
        <th>Items</th>
        <th>Title</th>
        <th>Quantity</th>
        <th>Stock</th>
        <th>Unit Price</th>
        <th>Subtotal</th>
        <th>Order Total</th>
        <th>Delete</th>
      </tr>
      <tr>

      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= image_tag item.product.image_url(:thumb).to_s %></td>
          <td><%= item.product.title %></td>
          <td><%= link_to item.quantity, edit_order_item_path(item) %></td>
          <td><%= display_stock item.product.stock, item.quantity %></td>
          <td><%= print_price item.product.price %></td>
          <td><%= print_price item.subtotal %></td>
          <td><strong><%= print_price @order.total %></strong></td>
          <td><%= link_to "Delete", item, data: {confirm: "Are you sure?"}, method: :delete  %></td>
        </tr>

      <% end %>
        
        <tr>
          <% if current_user != nil %>
          <th>Shipping To:</th>
          <td>
            <%= f.select :address_id, current_user.addresses.collect{|a| [a.to_s, a.id]} %>
            <%= f.hidden_field :address_id %>
            Or, <%= link_to "Add new address", new_address_path %>
          </td>
        </tr>
        <tr>  
          <th>Submit Order:</th>
            <td><%= f.submit "Submit Order" %></td>
          <% else %>
            <p>Please sign in to submit!</p>
          <% end %>
        </tr>
    </table>
  <% end %>

  <p> <%= link_to "Empty Cart", @order, data: { confirm: 'Are you sure?' }, method: :delete %></p>

  <p> <%= link_to "Continue Shopping", store_path %> </p>
