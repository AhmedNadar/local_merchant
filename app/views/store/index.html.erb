<% if notice %>
  <p id="notice"><%= notice %></p> 
<% end %>

<h1>Local Makers Store</h1>
<p> <%= link_to "Create a New Product", new_product_path %> </p>


<div class="<%= params[:controller] %>">
  <div id="container">
    <div class="user_nav">
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Sign up", signup_path %> or
        <%= link_to "Log in", login_path  %>.
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>
</div>



<% @products.each do |product| %>
  <div>
    <p><%= image_tag product.image_url(:thumb).to_s %></p>
    <h3><%= product.title %></h3>    
    <p><%= product.description %></p>
    <span><strong><%= print_price(product.price) %></strong></span><br>
    <span><%= button_to "Add to Cart", order_items_path(product_id: product .id) %></span> 
  </div>
<% end %>

