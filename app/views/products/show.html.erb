

      <div class="thumbnail-style">
        <div class="thumbnail-img">
          <div>
            <%= image_tag @product.image_url(:thumb).to_s %>
          </div>
          <%= link_to "Add to Cart", order_items_path(product_id: @product.id), class: "btn-more hover-effect", method: :post %>         
        </div>
        <h3><a class="hover-effect" ><%= @product.title %></a></h3>
        <p><%= @product.description %></p>
        
        <span class="panel"><%= print_price(@product.price) %></span>

         <p> <% if current_user && (current_user.id == @product.user_id) %>
          <%= link_to 'Edit', edit_product_path(@product) %> 
          <% end %>
          </p>
          <p> <%= link_to 'Back', products_path %></p>
      </div>


