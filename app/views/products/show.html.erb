<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= print_price(@product.price) %>
</p>

<p>
  <strong>Stock:</strong>
  <%= display_stock(@product.stock) %>
</p>

<p>
  <strong>Image</strong>
  <%= image_tag @product.image_url(:thumb).to_s %>
</p>
<%= link_to "Add to Cart", order_items_path(product_id: @product.id), class: "btn-more hover-effect" %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
