<h1>All Products</h1>

<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Stock</th>
			<th>Actions</th>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= image_tag product.image_url(:thumb).to_s %></td>
					<td><%= product.title %></td>
					<td><%= truncate(strip_tags(product.description), :length => 80 )%></td>
					<td><strong><%= print_price(product.price) %></strong></td>
					<td><strong><%= display_stock(product.stock) %></strong></td>
					<td>
						<%= link_to "Show", product_path(product) %><br>
						<%= link_to 'Edit', edit_product_path(product) %><br> 
						<%= link_to "Delete", product_path(product), data: {confirm: "Are you sure you want to delete this product?"}, method: :delete %>
					</td>
				</tr>
			</tbody>
		</tr>
		<% end %>
	</thead>
</table>

<p> <%= link_to "Create a New Product", new_product_path %> </p>
<p> <%= link_to "Visit the Store", store_path %> </p>

