<h1>All Products</h1>

<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Stock</th>
			<th>Actions</th>
			<tbody>
				<% @products.each do |pro| %>
				<tr>
					<td><%= image_tag "products/#{pro.image_url}" %></td>
					<td><%= pro.title %></td>
					<td><%= truncate(strip_tags(pro.description), :length => 80 )%></td>
					<td><strong><%= print_price(pro.price) %></strong></td>
					<td><strong><%= display_stock(pro.stock) %></strong></td>
					<td>
						<%= link_to "Show", product_path(pro) %>
						<%= link_to "Delete", product_path(pro), data: {confirm: "Are you sure you want to delete this product, there are no undo?"}, :method => :delete %>
					</td>
				</tr>
			</tbody>
		</tr>
		<% end %>
	</thead>
</table>

<p> <%= link_to "Create a New Product", new_product_path %> </p>
