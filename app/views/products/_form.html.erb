<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>

	<% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
  	<%= f.label :price, "Price (like 2.99)" %><br>
