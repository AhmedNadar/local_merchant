<!DOCTYPE html>
<html>
<head>
  <title>Local Makers Store</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body style="zoom: 1;">
  
  <% if current_user %>
    <div class="top">
      <div class="container">     
          <ul class="loginbar pull-right">
            Logged in as <%= current_user.email %>
            <li><%= link_to "Signout", logout_path, class: "login-btn" %></li> 
          <% else %>
            <!-- <li><a href="page_faq.html" class="login-btn">Signup</a></li>  -->
            <li><%= link_to "Signup", signup_path, class: "login-btn" %></li> 
            <li class="devider">&nbsp;</li>
            <!-- <li><a href="page_login.html" class="login-btn">Signin</a></li> -->
            <li><%= link_to "Signin", login_path, class: "login-btn" %></li>  
          </ul>
      </div>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>    
    </div>
  <% end %>
  

  <div class="header">               
    <div class="container"> 
        <!-- Logo -->       
        <div class="logo" id="logo-header">                                             
          <%= link_to image_tag("logo.png"), store_path %> 
        </div>
        <!-- /logo -->        

        <!-- Menu -->       
        <div class="navbar">                                
          <div class="navbar-inner">                                  
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a><!-- /nav-collapse -->                                  
            <div class="nav-collapse collapse">                                     
              <ul class="nav top-2">

                <li class="active">
                  <%= link_to "", store_path, class: "dropdown-toggle", data: {toggle: "dropdown"} %>Home
                  <b class="caret-out"></b>
                  <ul class="dropdown-menu">
                      <li><%= link_to "Option1: Landing Page", store_path, class: "active" %></li>
                  </ul>
                  <b class="caret-out"></b>                        
                </li>

                <li>
                  <%= link_to "", about_path, class: "dropdown-toggle", data: {toggle: "dropdown"} %>Pages
                  <b class="caret"></b>  
                  <ul class="dropdown-menu">
                      <li><%= link_to "About Page", about_path %></li>
                  </ul>
                  <b class="caret-out"></b>                        
                </li>

                <li>
                  <b class="caret"></b>
                  <%= link_to "", products_path, class: "dropdown-toggle", data: {toggle: "dropdown"} %>Products                    
                  <ul class="dropdown-menu">
                    <b class="caret-out"></b>
                    <li><%= link_to "Products", products_path %></li>
                  </ul>                                          
                </li>

                <li>
                  <b class="caret-out"></b>
                  <%= link_to "", store_path, class: "dropdown-toggle", data: {toggle: "dropdown"} %>Blog
                  <ul class="dropdown-menu">
                    <b class="caret-out"></b>
                    <li><%= link_to "Blog", store_path %></li>
                  </ul>                  
                </li>

                <li>
                  <b class="caret-out"></b>
                  <%= link_to "", contact_path, class: "dropdown-toggle", data: {toggle: "dropdown"} %>Contact
                  <ul class="dropdown-menu">
                    <b class="caret-out"></b> 
                    <li><%= link_to "Contact", contact_path %></li>
                  </ul>                      
                </li>

                <li>
                  <a class="search"><i class="icon-search search-btn"></i></a>
                </li>                               
              </ul>
              <div class="search-open">
                <div class="input-append">
                  <form>
                    <input type="text" class="span3" placeholder="Search">
                    <button type="submit" class="btn-u">Go</button>
                  </form>
                </div>
              </div>
            </div><!-- /nav-collapse -->                                
          </div><!-- /navbar-inner -->
        </div><!-- /navbar -->                          
    </div><!-- /container -->               
  </div><!-- /header -->    



  <!-- <div id="container">
    <div>
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Sign up", signup_path %> or
        <%= link_to "Log in", login_path  %>.
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
  </div> -->



<div>
	<ul>
		<li><%= link_to "Home", store_path %></li>
		<li><%= link_to "Shoes", browse_shoes_path %></li>
		<li><%= link_to "foods", browse_foods_path %></li>
		<li><%= link_to "clothes", browse_clothes_path %></li>
	</ul>
</div>




<%= yield %>

</body>
</html>
